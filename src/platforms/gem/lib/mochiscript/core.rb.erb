require 'v8'
require 'json'

module Mochiscript
  class Context
    def initialize
      @ctx = V8::Context.new
      @ctx['_$m_adapter'] = Adapter.new
      @ctx.eval(Parser::JAVASCRIPT)
    end

    def parse(str)
      @ctx.eval("$m.parse(#{str.to_json})")
    end

    def to_json(str)
      @ctx.eval("$m.toJSON(#{str.to_json})")
    end

    def pp(str)
      return @ctx.eval("$m.pp(#{str.to_json})")
    end

    def eval_ms(str)
      @ctx.eval(parse(str))
    end

    protected

    def method_missing(name, *args, &block)
      @ctx.send(name, *args, &block)
    end
  end

  class Adapter
    def out(arg)
      print arg
    end

    def outs(arg)
      puts arg
    end
  end

  class Parser
JAVASCRIPT = <<'FINISH'
var $m  = { ROOT: this, ADAPTER: _$m_adapter, PLATFORM: 'ruby' };
var JS2 = $m;
(function () {
  <%= @boot.gsub(%r|\\|, '\\\\') %>
  <%= @parser.gsub(%r|\\|, '\\\\') %>
})();
FINISH
  end
end
